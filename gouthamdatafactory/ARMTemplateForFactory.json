		{
			"name": "[concat(parameters('factoryName'), '/mydataflow')]",
			"type": "Microsoft.DataFactory/factories/dataflows",
			"apiVersion": "2018-06-01",
			"properties": {
				"type": "MappingDataFlow",
				"typeProperties": {
					"sources": [
						{
							"dataset": {
								"referenceName": "casesdeaths",
								"type": "DatasetReference"
							},
							"name": "casesanddeaths"
